{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug with ts-node + paths",
      "runtimeExecutable": "npx",
      "runtimeArgs": [
        "ts-node",
        "-r",
        "tsconfig-paths/register",
        "src/server.ts"
      ],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "outFiles": ["${workspaceFolder}/dist/**/*.js"],
      "sourceMaps": true
    }
  ]
}
